<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-t-50 p-b-90">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"ogin100-form validate-form flex-sb flex-w") do |f| %>
      <span class="login100-form-title p-b-51">
      <%= t("signin") %>
      </span>
      <div class="wrap-input100 validate-input m-b-16">
        <%= f.email_field :email, autofocus: true, autocomplete: "#{t("email")}", class:"input100", placeholder: "#{t("email")}" %>
        <span class="focus-input100"></span>
      </div>
      <div class="wrap-input100 validate-input m-b-16">
        <%= f.password_field :password, autocomplete: "current-password", class:"input100", placeholder: "#{t("password")}" %>
        <span class="focus-input100"></span>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="flex-sb-m w-full p-t-3 p-b-24">
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
      <% end %>
      <div class="container-login100-form-btn m-t-17">
        <%= f.submit t("login"), class:"login100-form-btn" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
