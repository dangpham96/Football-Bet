<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-t-50 p-b-90">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class:"ogin100-form validate-form flex-sb flex-w") do |f| %>
      <span class="login100-form-title p-b-100">
      <%= t("forgot_password") %>
      </span>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="wrap-input100 validate-input m-b-16">          
        <%= f.email_field :email, autofocus: true, autofocus: true, autocomplete:"#{t("email")}", class:"input100", placeholder: "#{t("email")}"  %>
        <span class="focus-input100"></span>
      </div>
      <div class="container-login100-form-btn m-t-17">
        <%= f.submit t("send_me"), class:"login100-form-btn" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
