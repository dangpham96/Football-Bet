<%= form_for [:admin, @season] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group col-sm-6">
    <%= f.select :league_id, get_leagues, {include_blank: t("league")}, {class: "form-control"} %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :start_time %><br>
    <%= f.date_select :start_time, class: "datepicker"  %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :finish_time %><br>
    <%= f.date_select :finish_time %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :add_football_clubs %><br>
    <%= select_tag :football_clubs, options_from_collection_for_select(FootballClub.all, "id", "name" ) , include_blank: t("football_club"), id: "template-example", class:"js-states form-control", multiple: true %>
  </div>

  <%= button_tag t("submit"), type: "submit", class: "btn btn-primary" %>
  <%= button_tag t("reset"), type: "reset", class: "btn btn-default" %>
<% end %>
