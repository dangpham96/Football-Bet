<tr>
  <td><span><%= get_index_page user_counter %></span></td>
  <td><%= user.name %></td>
  <td>
      <%= image_tag "#{user.avatar}" , class: "mx-auto img-fluid img-circle d-block mw", alt: "avatar" %>
  </td>
  <td><%= user.email %></td>
  <td>
    <% if user.is_admin? %>
      <%= t "admin" %>
    <% else %>
      <%= t "member" %>
    <% end %>
  </td>
  <td class="text-center">
    <%= link_to edit_admin_user_path(user) do %>
      <i class="fa fa-pencil fa-fw fa-update"></i>
    <% end %>
    <% if !current_user.current_user? user %>
      <%= link_to [:admin, user], method: :delete, data:{ confirm: t("you_sure")} do %>
        <i class="fa fa-trash-o fa-fw fa-delete"></i>
      <% end %>
    <% end %>
  </td>
</tr>
