<tr>
  <td><span><%= get_index_page player_counter %></span></td>
  <td><%= player.name %></td>
  <td><%= player.number %></td>
  <td><%= player.country %></td>
  <td><%= player.birthday.strftime(t("format_time")) %></td>
  <td><%= player.football_club_name %></td>
  <td class="text-center">
    <%= link_to edit_admin_player_path(player) do %>
    <i class="fa fa-pencil fa-fw fa-update"></i>
    <% end %>   
    <%= link_to [:admin, player], method: :delete, data:{ confirm: t("you_sure")} do %>
    <i class="fa fa-trash-o fa-fw fa-delete"></i>
    <% end %>    
  </td>
</tr>
