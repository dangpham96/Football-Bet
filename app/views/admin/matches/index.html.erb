<%= provide :title, t("list_match") %>
<%= link_to t("create_match"), new_admin_round_match_url, class: "btn btn-primary" %>
<hr class="invisible">
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary"><%= t "list_match" %></h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr class="text-center">
            <th><%= t ".stt" %></th>
            <th><%= t ".home_team" %></th>
            <th><%= t ".guest_team_id" %></th>
            <th><%= t ".start_time" %></th>
            <th><%= t ".goals_home_team" %></th>
            <th><%= t ".goals_guest_team" %></th>
            <th><%= t ".round" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "match", collection: @matches %>
        </tbody>
      </table>
    </div>
  </div>
</div>
