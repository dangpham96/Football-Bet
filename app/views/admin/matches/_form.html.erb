<%= form_for [:admin,@round,@match] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group col-sm-6">
    <%= f.select :home_team_id, get_football_clubs(@round) , {include_blank: t("football_club")}, {class: "form-control"} %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.select :guest_team_id,get_football_clubs(@round), {include_blank: t("football_club")}, {class: "form-control"} %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time, class: "datepicker"  %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :finish_time %><br>
    <%= f.datetime_select :finish_time %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.text_field :goals_home_team, autocomplete: "goalshometeam", value: "0",
      class: "form-control form-control-user", placeholder: t("goals_home_team") %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.text_field :goals_guest_team, autocomplete: "goals_guest_team", value: "0",
      class: "form-control form-control-user", placeholder: t("goals_guest_team") %>
  </div>

  <%= f.hidden_field :round_id, value: @round.id, class: "form-control mb-1" %>

  <div class="form-group col-sm-6">
    <%= f.select :status, options_for_select(Match.statuses.map { |key, value| [key.humanize, key] }), {include_blank: t("status")}, {class: "form-control"} %>
  </div>

  <%= button_tag t("submit"), type: "submit", class: "btn btn-primary" %>
  <%= button_tag t("reset"), type: "reset", class: "btn btn-default" %>

<% end %>
